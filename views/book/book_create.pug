extends ../layout

block content

	h1 Create Book
	hr

	div(class="row")
		div(class="col-sm-6")
			form(action="/catalog/book/create", method="POST", class="form-group")
				label(for="book_title") Title
				input(type="text", class="form-control", name="book_title")
				br
				label(for="book_summary") Summary
				textarea(type="text", rows="5", class="form-control", name="book_summary")
				br
				label(for="book_genre") Select Genre
				select(class="form-control")
					option(selected="true") Select a Genre
					each genre in data.genres
						option #{genre.name}
				div
					a(href="/catalog/genre/create", class="btn-danger btn-xs btn") Don't See your Genre ? Create Here
				br
				label(for="book_author") Select Author
				select(class="form-control")
					option(selected="true") Select an Author
					each author in data.authors
						option 
							span #{author.first_name} 
							span #{author.family_name}
				div
					a(href="/catalog/author/create", class="btn-danger btn-xs btn") Don't See your Author ? Create Here
				br

				div(class="btn-group")
					button(class="btn btn-xs btn-primary", type="submit") Submit
					a(href="/catalog/books", class="btn btn-danger btn-xs") Cancel

