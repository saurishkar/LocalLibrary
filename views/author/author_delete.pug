extends ../layout.pug

block content
	h1 Delete Author
	hr
	if(data)
		if(data.books.length > 0)
			form(action=`/catalog/author/${data.author._id}/delete`, method="POST", class="form-group")
				p List of Books this Author is linked to :
				ul(class="list-unstyled")
					each item in data.books
						li= item.title
				h4(class="text-danger") This will delete all the author's books and the book instances
				p(class="text-primary") Do you want to proceed ?
				div(class="btn-group")
					button(class="btn btn-xs btn-danger") Delete
					a(href="/catalog/authors", class="btn btn-default btn-xs") Cancel

		else
			form(action=`/catalog/author/${data.author._id}/delete`, method="POST", class="form-group")
				h4(class="text-primary") Are you sure you want to delete this Author ?
				div(class="btn-group")
					button(class="btn btn-xs btn-danger", type="submit") Delete
					a(href="/catalog/authors", class="btn btn-default btn-xs") Cancel
